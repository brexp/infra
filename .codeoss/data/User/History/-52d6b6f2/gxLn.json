{
  "mcpServers": {
    "firebase": {
      "command": "npx",
      "args": [
        "-y",
        "firebase-tools@latest",
        "experimental:mcp",
        "--only",
        "auth,firestore"
      ]
    },
    "ge": {
      "command": "npx",
      "args": [
        "install",
        "-g",
        "genkit-cli"
        "-y",
        "genkit@latest"
      ]
    }
  }
}